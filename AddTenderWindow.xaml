<Window x:Class="TenderProject.AddTenderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenderProject"
        mc:Ignorable="d"
        Title="AddTenderWindow" Height="300" Width="400">
    <Grid>
        <Grid Margin="10,0,10,8" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10,10,10,10" DataContext="{Binding}">
                <TextBox Text="{Binding Subject}" />
                <TextBox Text="{Binding Customer}" />
                <TextBox Text="{Binding ExpirationDate}" />
                <TextBox Text="{Binding Law}" />
                <TextBox Text="{Binding Link}" />
            </StackPanel>
            <Button Grid.Row="1" Grid.Column="0" Width="128" Height="33"  Content="Сохранить" HorizontalAlignment="Right"/>

        </Grid>

    </Grid>
</Window>
